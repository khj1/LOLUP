<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lolup.lolup_project.chat.storage.MybatisMessageRepository">

    <select id="findById" resultType="ChatMessage">
        SELECT * FROM chat_message WHERE messageId = #{_messageId}
    </select>

    <select id="save" parameterType="ChatMessage" resultType="java.lang.Long">
        INSERT INTO chat_message (message, memberId, roomId)
            values (#{message}, #{memberId}, #{roomId})
            RETURNING messageId;
    </select>
</mapper>
